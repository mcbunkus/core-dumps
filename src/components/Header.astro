---
interface Props {
    title: string;
}

const { title } = Astro.props;

const links = [
    { url: "/", name: "home" },
    { url: "/topics", name: "topics" },
];
---

<header
    class="flex flex-col sm:flex-row sm:items-center sm:justify-between sm:flex-wrap-reverse"
>
    <h1 class="my-6 order-2 sm:order-1">{title}</h1>
    <nav class="flex justify-center gap-4 text-2xl order-1 sm:text-lg">
        {
            links.map((link) => (
                <a class="underline" href={link.url}>
                    {link.name}
                </a>
            ))
        }
    </nav>
</header>
